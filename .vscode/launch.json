        {
            "type": "node",
            "request": "launch",
            "name": "Run Satelital-CashFisico",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "env": {
                "PARTNER": "SATELITAL-CASHFISICO"
            },
            "args": [
                "--timeout",
                "9999999",
                "--reporter",
